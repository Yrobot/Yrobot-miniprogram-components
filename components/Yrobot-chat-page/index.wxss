.navigationBar {
  position: relative;
  width: 100%;
}
.contentWindow {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.contentWindow .messagesHolder {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.inputArea {
  position: relative;
  width: 100%;
}
.popHolder {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: auto;
}